FROM jenkins/jenkins:lts

USER root

# Install docker CLI
RUN apt-get update && \
    apt-get install -y docker.io docker-compose && \
    git-lfs && \
    git lfs install --system && \
    apt-get clean && rm -rf /var/lib/apt/lists/*

    # Allow Jenkins user to access Docker socket
RUN usermod -aG docker jenkins

USER jenkins

